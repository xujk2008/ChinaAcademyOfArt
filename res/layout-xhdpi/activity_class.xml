<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/class_background" >

    <ImageView 
        android:id="@+id/class_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/class_logo"/>
        
    <ImageView
        android:id="@+id/class_last_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="310dp"
        android:scaleType="fitCenter"
        android:src="@drawable/class_last_button" />

    <ImageView
        android:id="@+id/class_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="310dp"
        android:scaleType="fitCenter"
        android:src="@drawable/class_next_button" />
    
    <ImageView 
        android:id="@+id/class_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="269dp"
        android:layout_marginRight="38dp"
        android:src="@drawable/class_begin"/>
    
    <HorizontalScrollView 
        android:id="@+id/class_scroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentBottom="true">
        
        <LinearLayout 
            android:layout_width="1219px"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">"
            
            <ImageView
                android:id="@+id/class_scroll_image"
                android:layout_width="1179px"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/class_scroll_image"/>
            
        </LinearLayout>
        
    </HorizontalScrollView>

</RelativeLayout>
