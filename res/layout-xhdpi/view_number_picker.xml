<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/view_number_picker_up_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/view_number_picker_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="4"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/view_number_picker_middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/view_number_picker_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="5"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/view_number_picker_down_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/view_number_picker_down_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="6"/>
        
    </RelativeLayout>

</LinearLayout>
